<installation version="1.0">

	<info>
		<appname>Duplicate Files Finder</appname>
		<appversion>1.1</appversion>
		<authors>
			<author name="Asterios Raptis" email="asterios.raptis@yahoo.gr"/>
		</authors>
		<url>http://sourceforge.net/</url>
		<javaversion>1.6</javaversion>
	</info>

	<guiprefs height="600" resizable="yes" width="800">
		<laf name="metouia">
			<os family="windows"/>
		</laf>
	</guiprefs>

	<locale>
		<langpack iso3="eng"/>
	</locale>

	<resources>
		<res src="readme.txt" id="HTMLInfoPanel.info"/>
		<res src="licence.txt" id="LicencePanel.licence"/>
		<res src="logo.ico" id="installer.langsel.img"/>
	</resources>

	<panels>
		<panel classname="HelloPanel"/>
		<panel classname="HTMLInfoPanel"/>
		<panel classname="LicencePanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="SimpleFinishPanel"/>
	</panels>

	<packs>
		<pack name="executables" required="yes">
            <description>The executables</description>
			<file src="../../LICENSE.txt" targetdir="$INSTALL_PATH"/>
			<file src="../launch4j/DuplicateFilesFinder.exe" targetdir="$INSTALL_PATH"/>
			<file src="readme.txt" targetdir="$INSTALL_PATH"/>
        </pack>

	</packs>

</installation>